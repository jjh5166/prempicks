<div class="page_container">
  <h2 class="page_header" >My Picks</h2>
  <%= render 'picks/my_picks_buttons'%>
  <div class="mp_container" id="mp_cont_1h" <% unless (@md_count < 19) %>style="display:none;"<%end%>>
    <div class="mp_col1">
    <%(1..19).each do |n|%>
      <%this_pick = Pick.where(user_id: current_user.id, matchday: n)[0]%>
      <div class="mp_col1_unit">
        <span class="mp_mdcount"><%= n %></span>
        <div class="mp_form">
        <%if @locked_mds[n] %>
          <span class="picked_span"><%=this_pick.team_id%></span>
        <%else%>
          <%this_pick = Pick.where(user_id: current_user.id, matchday: n)[0]%>
          <%= simple_form_for(this_pick) do |f| %>
          <%= f.input :team_id, as: :select,label: false, include_blank: true, collection: @pickteams.sort, :disabled => @user_picks_1h %>
          <%end%>
        <% end %>
        </div>
      </div>
    <% end %>
    </div>
  <%= render 'picks/picks_schedule_grid' %>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('.select.optional').change(function() {
    $(this).closest('form').submit();
  });
})
</script>
