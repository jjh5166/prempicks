<table class="table table-hover table-bordered standings_table" id="standings_second">
  <thead>
    <tr class="table_top">
      <th>
        <span>Team</span> /
        <span>Owner</span>
      </th>
      <th class="secondColumn">Points</th>
      <% (-@md_count..-20).each do |n|%>
      <th class="th_match" colspan="2">
        <%= -n %>
      </th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <% @secondhalftotals.each do |u|%>
    <tr>
      <td class="team_cell" title="<%=u.fname%> <%=u.lname%>">
        <%= u.team_name%>
      </td>
      <td class="secondColumn">
        <%= u.secondhalf %>
      </td>
      <% u.picks[19..38].first(@second_timer).reverse.each do |t|%>
      <td>
        <%= t.team_id %>
      </td>
      <td class="pt_cell">
        <%= t.points%>
      </td>
      <%end%>
    </tr>
    <%end%>
  </tbody>
</table>