<div class="dev_cnt">
<h2 class="page_header" >Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="actions">
      <%= f.submit "Reset Password", class: "btn login-btn" %>
    </div>
  <% end %>
  <div class="btn-break"></div>
  <%= link_to "Log in as guest", standings_path, class: "btn guest_btn"%>
</div>